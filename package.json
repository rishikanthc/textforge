{
  "name": "textforge",
  "private": false,
  "version": "1.2.3",
  "type": "module",
  "description": "A beautiful, extensible rich text editor built with Tiptap and React",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:types": "tsc -p tsconfig.build.json",
    "build:lib": "npm run build:types && vite build --mode lib",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib"
  },
  "keywords": [
    "react",
    "editor",
    "rich-text",
    "tiptap",
    "prosemirror",
    "wysiwyg",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/quill-editor.git"
  },
  "peerDependencies": {
    "@tiptap/core": "^3",
    "@tiptap/extension-code-block-lowlight": "^3",
    "@tiptap/extension-file-handler": "^3",
    "@tiptap/extension-highlight": "^3",
    "@tiptap/extension-image": "^3",
    "@tiptap/extension-mathematics": "^3",
    "@tiptap/extension-placeholder": "^3.3.1",
    "@tiptap/pm": "^3",
    "@tiptap/react": "^3",
    "@tiptap/starter-kit": "^3",
    "katex": "^0.16",
    "lowlight": "^3",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "default": "./dist/index.umd.js"
    },
    "./dist/textforge.css": "./dist/textforge.css"
  },
  "style": "dist/textforge.css",
  "sideEffects": [
    "**/*.css"
  ],
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@tiptap/extension-mention": "^3.4.1",
    "@tiptap/suggestion": "^3.4.1"
  }
}
